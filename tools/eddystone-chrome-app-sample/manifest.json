{
  "manifest_version": 2,
  "name": "EddystoneChromeApp",
  "short_name": "EddystoneChromeApp",
  "description": "Chrome App to advertise Eddystone packets.",
  "version": "1.0.0",
  "minimum_chrome_version": "47",

  "icons": {
    "16": "assets/icon_16.png",
    "128": "assets/icon_128.png"
  },

  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  },
  "bluetooth": {
    "low_energy": true,
    "peripheral": true
  }
}
